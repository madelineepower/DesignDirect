@model DesignDirect.Models.IdeaboardViewModels.AddImageViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Add to Ideaboard</h2>
<hr>
<div class="row">
    <form asp-action="Save">
    <input type="hidden" asp-for="Image.ImageId" />
    <input type="hidden" asp-for="Image.Source" />
    <div class="col-md-6">
        <img src="@Model.Image.Source">
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList( 
                    "chosenIdeaboard",
                    @Model.IdeaboardId,
                    new
                    {
                        @name = "Ideaboard.IdeaboardId"
                    }
                )
            </div>
        </div> 
        <div class="form-group">
            <div class="col-md-10">
                <label asp-for="Tags" class="control-label"></label>
                @Html.ListBoxFor(m => m.SelectedTags, 
                                 Model.Tags, 
                                 new { @class="form-control" })
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
        </div> 
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
            <a class="btn btn-default" asp-action="Index">Cancel</a>
        </div>
    </form>
    </div>
</div>
<div>
</div>
