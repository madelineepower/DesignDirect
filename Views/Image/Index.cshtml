@model DesignDirect.Models.FilterResultsViewModel
@{
    ViewData["Title"] = "Index";
}

<h2>Find Inspiration Photos</h2>

<div class="row">
    <div class="col-md-3">
        <h3>Filter</h3>
        <form asp-action="Filter">
            <div class="form-group">
                <h4>Room</h4>
                <label asp-for="Rooms" class="control-label"></label>
                @Html.ListBoxFor(m => m.FilterRoomIds, 
                                 Model.Rooms, 
                                 new { @class="form-control" })
            </div>
            <div class="form-group">
                <h4>Style</h4>
                <label asp-for="Styles" class="control-label"></label>
                @Html.ListBoxFor(m => m.FilterStyleIds, 
                                 Model.Styles, 
                                 new { @class="form-control" })
            </div>
            <input type="submit" value="Filter" class="btn btn-default" />
        </form>
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var item in @Model.Images) {
                <div class="col-md-3">
                    <a asp-action="AddToIdeaboard" asp-route-id="@item.ImageId">
                    <img src="@Html.DisplayFor(modelItem => item.Source)" style="width:100%">
                    </a>
                </div>
            }
        </div>
    </div>
</div>
        