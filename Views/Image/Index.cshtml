@model IEnumerable<DesignDirect.Models.Image>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model) {
        <div class="col-md-2">
            <a asp-action="AddToIdeaboard" asp-route-id="@item.ImageId">
            <img src="@Html.DisplayFor(modelItem => item.Source)" style="width:100%">
            </a>
        </div>
    }
</div>
        